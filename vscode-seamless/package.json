{
  "name": "seamless-modeldev",
  "displayName": "Seamless ModelDev",
  "description": "Pause, rewind, fork, merge, and explore your models from VS Code.",
  "version": "0.0.1",
  "publisher": "you",
  "engines": { "vscode": "^1.87.0" },
  "activationEvents": ["onCommand:seamless.showDashboard"],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      { "command": "seamless.showDashboard", "title": "Seamless ModelDev: Dashboard" }
    ],
    "configuration": {
      "type": "object",
      "title": "Seamless ModelDev",
      "properties": {
        "seamless.pythonPath": {
          "type": "string",
          "default": "python",
          "description": "Path to Python interpreter running SeamlessSession"
        },
        "seamless.storagePathOverride": {
          "type": "string",
          "default": "",
          "description": "Override path for the SQLite DB (for advanced setups)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "build": "tsc -p ./",
    "watch": "tsc -w -p ./"
  },
  "devDependencies": {
    "typescript": "^5.4.0",
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.87.0"
  },
  "dependencies": {
    "better-sqlite3": "^12.2.0"
  }
}
